								a(href='#')
									i.fa.fa-cubes
									|  Platforms
									span.badge 2
							li.col-md-4.col-sm-6.col-xs-4
								a(href='#')
									i.fa.fa-life-ring
									|  Support
									span.badge 9
							li.col-md-4.col-sm-6.col-xs-4
								a(href='#')
									i.fa.fa-gear
									|  Settings
									span.badge 5
							li.col-md-4.col-sm-6.col-xs-4
								a(href='#')
									i.fa.fa-thumbs-up
									|  Likes
									span.badge 182
							li.col-md-4.col-sm-6.col-xs-4
								a(href='#')
									i.fa.fa-heart-o
									|  Lovers
									span.badge + 21
							li.col-md-4.col-sm-6.col-xs-4
								a(href='#')
									i.fa.fa-thumbs-down
									|  Dislikes
									span.badge 20
		.container
			.col-md-2
				//- | #{event}
				#date

				.panel.panel-default.panel-filled
					.panel-heading
						.panel-title
							| Transcription Editor
					.panel-body
						table
							tr
								td Title:
								td #{event.url}
					.panel-footer Panel footer

			.col-md-8
					.textedit
						ul.list-unstyled
							li
								.btn-group.btn-group(role='group', aria-label='Large button group')
									button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
										| Font Family
										span.caret
									ul.dropdown-menu
										li
											a(href='#') Action
										li
											a(href='#') Another action
										li
											a(href='#') Something else here
										li.divider(role='separator')
										li
											a(href='#') Separated link
									button.btn.btn-default(type='button', onclick='jumpqToBottom()') Jump to Bottom
					textarea#pad(autofocus='', spellcheck='false', rows='10')
			.col-md-2

