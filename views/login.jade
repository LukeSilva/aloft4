  body
    .account-pages
    .clearfix
    .wrapper-page
      .card-box
        .panel-heading
          h3.text-center
            strong.text-custom aloft 4
        .panel-body
          form.form-horizontal.m-t-20(action='index.html')
            .form-group
              .col-xs-12
                input.form-control(type='text', required='', placeholder='Username')
            .form-group
              .col-xs-12
                input.form-control(type='password', required='', placeholder='Password')
            .form-group
              .col-xs-12
                .checkbox.checkbox-primary
                  input#checkbox-signup(type='checkbox')
                  label(for='checkbox-signup')
                    | Remember me
            .form-group.text-center.m-t-40
              .col-xs-12
                button.btn.btn-pink.btn-block.text-uppercase.waves-effect.waves-light(type='submit') Log In
            .form-group.m-t-30.m-b-0
              .col-sm-12
                a.text-dark(href='page-recoverpw.html').text-center
                  i.fa.fa-lock.m-r-5
                  |  Forgot your password?
      .row
        .col-sm-12.text-center
          p
            | Don't have an account? 
            a.text-primary.m-l-5(href='page-register.html')
              b Sign Up
