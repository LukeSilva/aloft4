		script(type='text/javascript', src='/themes/yummy/js/vendors/parsley/parsley.min.js')
		//- jQuery UI Touch
		script(src='/js/jquery-ui-touch.js')
		//- General scripts
		script(src='/js/general.js')
		//- ShareDB
		script(src='/sharedb/textarea.js' defer)
