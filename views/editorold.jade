doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		title #{title}

		//- Bootstrap
		link(rel='stylesheet', href='/node/bootstrap/dist/css/bootstrap.min.css')
		style.
			body {
			background: #ddd;
			}
			#container {
			position: absolute;
			top: 24px;
			right: 24px;
			bottom: 24px;
			left: 24px;
			}
			textarea {
			font: 14px/1.3 sans-serif;
			padding: 4px 8px;
			height: 100%;
			width: 100%;
			box-sizing: border-box;
			}
		link(rel='stylesheet', href='/css/editor.css')
		#container
			textarea#pad(autofocus='')
	body
		script.
			var user = !{JSON.stringify(user)};
			var event = !{JSON.stringify(event)};

		//- jQuery
		script(src='/node/jquery/dist/jquery.min.js')
		//- Bootstrap scripts
		script(src='/node/bootstrap/dist/js/bootstrap.min.js')
		//- ShareDB scripts
		script(src='/sharedb/textarea.js' defer)
		//- Enable tabbing in the browser
		script(src='/js/no-tab.js' defer)